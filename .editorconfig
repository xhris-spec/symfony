# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.{json,json5,yml}]
indent_size = 2
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.sh]
end_of_line = lf

[*.mjml]
indent_size = 2

[*.scss]
indent_size = 2
